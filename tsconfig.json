{
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": "src",
		"experimentalDecorators": true,
		"lib": [
			"es2015"
		],
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "build",
		"removeComments": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"typings/*.d.ts"
	]
}
